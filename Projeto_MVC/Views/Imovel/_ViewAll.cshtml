@model IEnumerable<Projeto_MVC.Models.Imovel>

<div class="row">
    <div class="col-lg-12">
        <div class="text-center">

            <div class="d-grip gap-2 d-md-flex justify-content-md-start">
                <p>
                    <!-- Button trigger modal -->
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Imovel",null,Context.Request.Scheme)','Novo Cadastro')" class="btn btn-outline-primary" role="button">Cadastrar Imóveis</a>
                </p>
            </div>

            <h4 class="display-5 mb-5">Listagem de Cadastros</h4>

            <table class="table" id="table-clientes">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImovelId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClienteId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Finalidade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Valor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataCadastro)
                        </th>
                        <th></th>


                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@Html.DisplayFor(modelItem => item.ImovelId)</th>
                            <td> @Html.DisplayFor(modelItem => item.ClienteId)</td>
                            <td> @Html.DisplayFor(modelItem => item.Finalidade)</td>
                            <td> @Html.DisplayFor(modelItem => item.Valor)</td>
                            <td> @Html.DisplayFor(modelItem => item.DataFormat)</td>
                            <td class="options">
                                <a onclick="showInPopup('@Url.Action("AddOrEdit","Imovel",new {id=item.ImovelId},Context.Request.Scheme)','Editar Imovel')" class="btn btn-warning" role="button"><i class="fa-solid fa-pen-to-square"></i></a>

                                <form asp-action="Delete" asp-route-id="@item.ImovelId" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                    <input type="hidden" asp-for="@item.ImovelId" />
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </form>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
