@model Projeto_MVC.Models.Imovel

@{
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.ImovelId" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ImovelId" />
            <input type="hidden" asp-for="DataCadastro" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ClienteId" class="control-label"> Id do Cliente</label>
                        <input asp-for="ClienteId" class="form-control" required />
                        <span asp-validation-for="ClienteId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Finalidade" class="control-label"> Finalidade</label>
                        <input asp-for="Finalidade" class="form-control" required />
                        <span asp-validation-for="Finalidade" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 mt-3">
                    <div class="form-group">
                        <label asp-for="Valor" class="control-label"> Valor</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text">$</span>
                            <input asp-for="Valor"  type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                            <span class="input-group-text">.00</span>
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mt-5">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <a asp-action="Index" role="button" class="btn btn-secondary" class="ms-5">Voltar</a>
            </div>
        </form>
    </div>
</div>
