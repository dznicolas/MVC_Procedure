@model IEnumerable<Projeto_MVC.Models.Cliente>

<div class="row">
    <div class="col-lg-12">
        <div class="text-center">

            <div class="d-grip gap-2 d-md-flex justify-content-md-start">
                <p>
                    <!-- Button trigger modal -->
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Clientes",null,Context.Request.Scheme)','Novo Cadastro')" class="btn btn-outline-primary" role="button">Realizar novo Cadastro</a>
                </p>
            </div>

            <h4 class="display-5 mb-5">Listagem de Cadastros</h4>

            <table class="table" id="table-clientes">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NomeCliente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TipoCliente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NomeContato)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TelefoneContato)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cidade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Bairro)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Logradouro)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataCadastro)
                        </th>
                        <th></th>


                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                            <td> @Html.DisplayFor(modelItem => item.NomeCliente)</td>
                            <td> @Html.DisplayFor(modelItem => item.TipoCliente)</td>
                            <td> @Html.DisplayFor(modelItem => item.NomeContato)</td>
                            <td> @Html.DisplayFor(modelItem => item.TelefoneContato)</td>
                            <td> @Html.DisplayFor(modelItem => item.Cidade)</td>
                            <td> @Html.DisplayFor(modelItem => item.Bairro)</td>
                            <td> @Html.DisplayFor(modelItem => item.Logradouro)</td>
                            <td> @Html.DisplayFor(modelItem => item.DataCadastro)</td>
                            <td class="options">
                                <a onclick="showInPopup('@Url.Action("AddOrEdit","Clientes",new {id = item.Id},Context.Request.Scheme)','Editar Cadastro')" class="btn btn-warning" role="button"><i class="fa-solid fa-pen-to-square"></i></a>

                                <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                    <input type="hidden" asp-for="@item.Id" />
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </form>
                            </td>

                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
