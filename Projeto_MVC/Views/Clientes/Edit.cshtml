@model Projeto_MVC.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4 text-center">Editar Cliente</h1>
<hr />
<div class="row  d-flex justify-content-center align-items-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomeCliente" class="control-label"> Nome Cliente</label>
                <input asp-for="NomeCliente" class="form-control" />
                <span asp-validation-for="NomeCliente" class="text-danger"></span>

                <label asp-for="TipoCliente" class="control-label"> Tipo Cliente</label>
                <input asp-for="TipoCliente" class="form-control" />
                <span asp-validation-for="TipoCliente" class="text-danger"></span>

                <label asp-for="NomeContato" class="control-label"> Nome Contanto</label>
                <input asp-for="NomeContato" class="form-control" />
                <span asp-validation-for="NomeContato" class="text-danger"></span>

                <label asp-for="TelefoneContato" class="control-label"> Telefone Contato</label>
                <input asp-for="TelefoneContato" class="form-control" />
                <span asp-validation-for="TelefoneContato" class="text-danger"></span>

                <label asp-for="Cidade" class="control-label"> Cidadee</label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>

                <label asp-for="Bairro" class="control-label"> Bairro</label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>

                <label asp-for="Logradouro" class="control-label"> Logradouro </label>
                <input asp-for="Logradouro" class="form-control" />
                <span asp-validation-for="Logradouro" class="text-danger"></span>

                <label asp-for="DataCadastro" type="date" class="control-label"> Data Cadastro </label>
                <input asp-for="DataCadastro" class="form-control" />
                <span asp-validation-for="DataCadastro" class="text-danger"></span>

            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" role="button" class="btn btn-secondary" class="ms-5">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
